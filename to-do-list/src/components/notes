export default function TodoComponent() {
  const [todos, setTodos] = useState([]);
  const [todo, setTodo] = useState("");

  function handleTodo() {
    let todosCopy = [...todos];
    todosCopy.push(todo);
    setTodos(todosCopy);
  }

  return (
    <div id="todo-form">
      <input
        id="todo"
        placeholder="Enter your task"
        onChange={(e) => setTodo(e.target.value)}
      />
      <button onClick={handleTodo}>Add Task</button>
    </div>
  );
}